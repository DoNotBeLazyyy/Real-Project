{
    "compilerOptions": {
        /* 기본 옵션들 */
        "target": "ESNext", // 어떤 버전의 JavaScript로 컴파일 될것인지 설정
        "module": "ESNext", // 생성된 모듈 코드 설정
        "lib": ["ESNext", "DOM", "DOM.Iterable"], // 컴파일 과정에 사용될 라이브러리 파일 설정
        "jsx": "react-jsx", // 생성될 JSX 코드 설정
        "declaration": true, // d.ts 파일 생성 설정
        "declarationDir": "./dist", // d.ts 파일 생성 경로
        "outDir": "./dist", // 출력될 디렉토리 설정
        "noEmit": true, // 출력 방출(emit) 유무 설정 [true 설정시 최종 결과물이 나오지 않게됨]
        // "emitDeclarationOnly": true, //.js와 .jsx 파일 없이 선언 파일만 내보내도록 하는 옵션
        "isolatedModules": true, // 프로젝트 내에 모든 각각의 소스코드 파일을 모듈로 만들기를 강제한다. 외부 도구 사용시 true로 하는 것이 좋다.

        /* 엄격한 유형 검사 옵션 */
        "strict": true, // 모든 엄격한 유형 검사 옵션 활성화 여부

        /* 추가 검사 옵션 */
        "noUnusedLocals": false, // 사용되지 않은 로컬이 있을 경우, 오류로 보고
        "noUnusedParameters": false, // 사용되지 않은 매개변수가 있을 경우, 오류로 보고
        "noFallthroughCasesInSwitch": true, // switch문 오류 유형에 대한 오류 보고

        /* 모듈 분석 옵션 */
        "moduleResolution": "bundler", // 모듈 분석 방법 설정
        "allowSyntheticDefaultImports": true, // 기본 출력(default export)이 없는 모듈부터 기본 호출을 허용 (이 코드는 단지 유형 검사만 수행)

        /* 고급옵션 */
        "skipLibCheck": true, // 선언 파일 유형 검사 스킵

        /* 기타 */
        "useDefineForClassFields": true, // 클래스 필드의 문법이 ECMAScript 표준을 따를지 결정
        "resolveJsonModule": true, // 확장자가 .json인 모듈의 import를 허용

        /* Linting */
        "baseUrl": ".",
        "paths": {
            "@assets/*": ["src/assets/*"],
            "@components/*": ["src/components/*"],
            "@pages/*": ["src/pages/*"],
            "@router/*": ["src/router/*"],
            "@services/*": ["src/services/*"],
            "@store/*": ["src/store/*"],
            "@themes/*": ["src/themes/*"],
            "@type/*": ["src/types/*"],
            "@utils/*": ["src/utils/*"],
            "App": ["src/App"],
            "Main": ["src/Main"],
        }
    },
    "include": [
        "vite.config.ts",
        "src/**/*",
        "postcss.config.js",
        "tailwind.config.js",
        "eslint.config.js",
        "vite.config.ts"
    ]
}
